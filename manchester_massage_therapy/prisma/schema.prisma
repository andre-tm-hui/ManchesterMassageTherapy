// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Practitioner {
  uid             Int      @id @default(autoincrement())
  firstName       String
  surname         String
  joinDate        DateTime
  message         String
  profilePhotoUrl String
  altPhotoUrl     String?
  expertIn        Int[]    @default([])
  favorite        Int?
}

model Therapy {
  uid             Int      @id @default(autoincrement())
  name            String
  description     String
  coverImageUrl   String
  bookingUrl      String
  recommendations String[] @default([])
}

model IGPost {
  uid             Int      @id
  caption         String?
  albumUrls       String[]
  uploadDate      DateTime
  prefAspectRatio Float
  postUrl         String
}

model GoogleReview {
  uid             String   @id
  profilePhotoUrl String
  displayName     String
  isAnonymous     Boolean
  rating          Int
  comment         String
  createTime      DateTime
}
